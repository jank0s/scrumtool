<h1>Product backlog</h1>
<div class="backlog-buttons">
    <% if productowner? || scrummaster? || admin? %>
        <%= button_to "Add story", new_story_path, :class => "btn btn-primary pull-right", :method => :get %>
    <% end %>
    <% if scrummaster? || admin? %>
        <%= button_to "Manage sprints", sprints_path, :class => "btn btn-primary pull-right", :method => :get %>
    <% end %>
</div>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li class="active"><a href="#unfinished-stories" data-toggle="tab">Unfinished stories</a></li>
    <li><a href="#finished-stories" data-toggle="tab">Finished stories</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="unfinished-stories">
        <h2>User stories for current sprint</h2>
        <div class="part-story">
            <% if !@sprintStories.empty? %>
                <% @sprintStories.each do |story| %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="pull-left">
                                <%= story.name %> (Priority: <%= story.priority.name %> | Business
                                value: <%= story.value %>)
                            </div>
                            <%= button_to "Edit", edit_story_path(story.id), :class => "btn btn-xs btn-success pull-right", :method => :get %>
                            <%= button_to "Remove", story_path(story.id), :class => "btn btn-xs btn-danger pull-right", :method => :delete %>
                            <div class="clear"></div>
                        </div>
                        <div class="panel-body">
                            <%= story.description %>
                        </div>
                    </div>
                <% end %>
            <% else %>
                No stories for current sprint
            <% end %>
        </div>
        <h2>Remaining user stories</h2>
        <div class="part-story">
            <% if !@remainingStories.empty? %>

                <% @remainingStories.each do |story| %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="pull-left">
                                <% if scrummaster? || admin? %>
                                    <%= check_box("story_checked", story.id) %>
                                <% end %>
                                <b><%= story.name %></b> ( Priority: <%= story.priority.name %> <% if !story.value.nil? %> | Business value: <%= story.value %> <% end %>)
                            </div>
                            <%= button_to "Edit", edit_story_path(story.id), :class => "btn btn-xs btn-success pull-right", :method => :get %>
                            <%= button_to "Remove", story_path(story.id), :class => "btn btn-xs btn-danger pull-right", :method => :delete %>
                            <div class="clear"></div>
                        </div>
                        <div class="panel-body">
                            <%= story.description %>
                            <ul class="acceptance-tests text-primary">
                                <% story.test.split(/\n/).each do |test| %>
                                    <li># <%= test %></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                <% end %>
                <% if scrummaster? || admin? %>
                    <%= button_to "Add to current sprint",{}, :class => "btn btn-primary pull-right", :method => :get %>
                    <%= button_to "Save time estimates",{}, :class => "btn btn-primary pull-right", :method => :get %>
                    <% end %>
            <% else %>
                No remaining user stories
            <% end %>
        </div>
    </div>
    <div class="tab-pane" id="finished-stories">
        <h2>Finished user stories</h2>
        <div class="part-story">
            <% if !@finishedStories.empty? %>
                <% @finishedStories.each do |story| %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="pull-left">
                                <b><%= story.name %></b> ( Priority: <%= story.priority.name %> <% if !story.value.nil? %> | Business value: <%= story.value %> <% end %>)
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="panel-body">
                            <%= story.description %>
                            <ul class="acceptance-tests text-primary">
                                <% story.test.split(/\n/).each do |test| %>
                                    <li># <%= test %></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                <% end %>
            <% else %>
                No finished user stories
            <% end %>
        </div>
    </div>
</div>
